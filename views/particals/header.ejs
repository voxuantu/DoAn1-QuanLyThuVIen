<header>
    <div class="container">
        <div class="header">
            <nav class="navbar navbar-expand-sm ">
                <div class="container-fluid">
                    <!-- Links -->
                    <div class="col-lg-9 col-md-9">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/trangChu/1">
                                    <i class="fa-solid fa-house"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/gioiThieu">Giới thiệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/lienHe">Liên hệ</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-3">
                        <div class="header_right">
                            <% if(currentUser ==null) { %> 
                                <a href="/dangNhap">Đăng nhập</a>
                            <% }else{ %>
                                <ul>
                                    <li>
                                        <i class="fa-solid fa-circle-user" onclick="toggleUserBox()"></i>
                                    </li>
                                    <li>
                                        <a href="/gioSach">
                                            <i class="fa-solid fa-basket-shopping">
                                                <% if (cart) { %>
                                                    <span class="badge bg-danger text-wrap notifi-counter" id="cartQuantity"><%= cart.length %> </span>
                                                <% }else{%>
                                                    <span class="badge bg-danger text-wrap notifi-counter" id="cartQuantity">0</span>
                                                <% } %> 
                                            </i>
                                        </a>
                                    </li>
                                    <li>
                                        <i class="fa-solid fa-bell" onclick="toggleNotify()">
                                            <span class="badge bg-danger text-wrap notifi-counter">7</span>
                                        </i>
                                    </li>
                                </ul>
                                <div class="notifi-box hide-element" id="notifi-box-id">
                                    <h2>Thông báo <span>7</span></h2>
                                    <div class="notifi-item">
                                        <img src="/icon/avatar.png" alt="avatar">
                                        <div>
                                            <h5>Mượn sách</h5>
                                            <p>Yêu cầu mượn sách đã được chấp nhận</p>
                                        </div>
                                    </div>
                                    <div class="notifi-item">
                                        <img src="/icon/avatar.png" alt="avatar">
                                        <div>
                                            <h4>Mượn sách</h4>
                                            <p>Yêu cầu mượn sách đã được chấp nhận</p>
                                        </div>
                                    </div>
                                    <div class="notifi-item">
                                        <img src="/icon/avatar.png" alt="avatar">
                                        <div>
                                            <h4>Mượn sách</h4>
                                            <p>Yêu cầu mượn sách đã được chấp nhận</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="user-box hide-element" id="userBox">
                                   <ul>
                                       <li>
                                           <form action="/trangCaNhan" method="get">
                                                <button>
                                                    <i class="fa-solid fa-user"></i>
                                                    <span>Trang cá nhân</span>
                                                </button>
                                           </form>
                                        </li>
                                       <li>
                                           <form action="/trangChu//dangXuat?_method=DELETE" method="post">
                                                <button>
                                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                                    <span>Đăng xuất</span>
                                                </button>
                                           </form>
                                       </li>
                                   </ul>
                                </div> 
                            <% } %> 
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>