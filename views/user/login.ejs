<%- contentFor('head') %> 
<title>Đăng nhập</title>
<link rel="stylesheet" href="/css/login.css">
<link rel="stylesheet" href="/css/cssInput.css">

<%- contentFor('body') %>
<body>
    <div class="container">
        <div class="contact-box">
            <div class="left"></div>
            <div class="right">
                <div class="container_login">
                    <h3>Đăng nhập</h3>
                    <% if(messages.error) { %>
                        <%= messages.error %>
                    <% } %> 
                    <form id="formDangNhap" class="login_form" action="/dangNhap" method="post">
                        <div class="mb-3">
                            <input type="text" class="field" id="username" name="username" placeholder="Tên đăng nhập...">
                            <span class="errorMessage"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="field" id="password" name="password" placeholder="Mật khẩu...">
                            <span class="errorMessage"></span>
                        </div>
                        <div class="text_right">
                            <a href="/quenMatKhau">Quên mật khẩu?</a>
                        </div>
                        <div class="nutdangnhap">
                            <button type="submit" class="nutbam" id="next" type="button">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/javascript/validator.js"></script>
<script>
    Validator({
        form : '#formDangNhap',
        errorSelector : '.errorMessage',
        rules : [
            Validator.isRequire('#username'),
            Validator.isRequire('#password')
        ]
    });
</script>
