<%- contentFor('head') %>
    <title>Quản lý sách</title>
<%- contentFor('body') %>
<%- include('../particals/header') %>
    <div class="container" style="min-height: 500px;">
        <div class="row">
            <div class="col-sm-3">
                <div class="left_menu timkiem" style="padding: 0 !important;">
                    <div class="theloai">
                        <h5>Quản lý</h5>
                    </div>
                    <div class="dstheloai">
                        <ul>
                            <li><a href="/quanLySach/1">Sách</a></li>
                            <li><a href="/quanLyTheLoai">Thể loại</a></li>
                            <li><a href="/quanLyNhaXuatBan">Nhà xuất bản</a></li>
                            <li><a href="/quanLyTacGia">tác giả</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-sm-9">
                <div id="ql-sach">
                    <div class="timkiem mb-2">
                        <div class="row">
                            <div class="col-sm-3">
                                <a href="/quanLySach/create" class="nut-them-moi">
                                    <button class="nutbam">Thêm sách mới</button>
                                </a>
                            </div>
                            <div class="col-sm-9">
                                <div class="search_box_qlsach row">

                                    <div class="col">
                                        <div class="input-group mb-3">
                                            <select class="form-select">
                                                <option>Tên sách</option>
                                                <option>Tên tác giả</option>
                                            </select>
                                            <input class="form-control" type="text"
                                                placeholder="Nhập từ khóa tìm kiếm...">
                                            <button class="nutbam">Tìm</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ảnh bìa</th>
                                    <th scope="col">Tên sách</th>
                                    <th scope="col">Tác giả</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i = 0; i < books.length; i++ ) { %>
                                    <tr>
                                        <th scope="row"><%= 5*(current-1) + i + 1%> </th>
                                        <td><img src="<%= books[i].coverImage %>" alt="<%= books[i].name %>"
                                                class="img-fluid"></td>
                                        <td><%= books[i].name %></td>
                                        <td><%= books[i].author.name %></td>
                                        <td><%= books[i].quantity %></td>
                                        <td>
                                            <i class="fa-solid fa-trash-can action-book xoa"></i>
                                            <i class="fa-solid fa-pen-to-square action-book"></i>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                        <div>
                            <% if (pages > 0) { %>
                                <ul class="pagination justify-content-center">
                                    <% if (current == 1) { %>
                                        <li class="disabled"><a class="page-link">
                                            <span aria-hidden="true">&laquo;</span></a>
                                        </li>
                                    <% } else { %>
                                        <li><a class="page-link" href="/quanLySach/1">
                                            <span aria-hidden="true">&laquo;</span></a>
                                        </li>
                                    <% } %>
                                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                    <% if (i !== 1) { %>
                                        <li class="page-item active"><a class="page-link">...</a></li>
                                    <% } %>
                                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                        <% if (i == current) { %>
                                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                                        <% } else { %>
                                            <li><a class="page-link" href="/quanLySach/<%= i %>"><%= i %></a></li>
                                        <% } %>
                                        <% if (i == Number(current) + 4 && i < pages) { %>
                                            <li class="page-item active"><a class="page-link">...</a></li>
                                        <% } %>
                                    <% } %>
                                    <% if (current == pages) { %>
                                        <li class="disabled"><a class="page-link">
                                            <span aria-hidden="true">&raquo;</span></a>
                                        </li>
                                    <% } else { %>
                                        <li><a class="page-link" href="/quanLySach/<%= pages %>">
                                            <span aria-hidden="true">&raquo;</span></a>
                                        </li>
                                    <% } %>
                                </ul>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Chỉnh sửa thể loại</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div>
                            <labelclass="form-label">Tên thể loại</label>
                                <input type="text" class="form-control" placeholder="Tên thể loại...">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="nutbamred" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="nutbam">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/javascript/TrangQuanLySach.js"></script>
    <%- include('../particals/footer') %>