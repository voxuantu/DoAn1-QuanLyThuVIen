<%- contentFor('head') %>
    <title>Quản lý độc giả</title>
<%- contentFor('body') %>

<% if (currentUser.role.name=='ADMIN') { %>
    <%- include('../particals/headerAdmin') %>
<% } else if (currentUser.role.name=='MOD1') { %>
    <%- include('../particals/headerMod1') %>
<% } %> 

<% 
    function addDays(date, days) {
        var result = new Date(date);
        result.setDate(result.getDate() + days);
        return result;
    }

    function subtractDays(date){
        var date2 = new Date();
        var date1 = new Date(date)
        var time_difference = date1.getTime() - date2.getTime();
        return Math.floor(time_difference/(1000 * 60 * 60 * 24));
    }
%> 
<div class="container" style="min-height: 500px;">
    <div class="duong-dan-muc">
        <a href="/trangChu/1">Trang chủ</a>
        <i class="fa-solid fa-angle-right"></i>
        <a href="/quanLySach/1">Quản độc giả</a>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <div class="left_menu timkiem" style="padding: 0 !important;">
                <div class="theloai">
                    <h5>Quản lý</h5>
                </div>
                <div class="dstheloai">
                    <ul>
                        <li><a href="/quanLySach/1">Độc giả</a></li>
                        <li><a href="/quanLyNhanVien/1">Nhân viên</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-10">
            <div id="ql-sach">
                <div class="timkiem mb-2" style="min-height: 600px; position: relative; padding-bottom: 10px;">
                    <div class="row">
                        <div class="col-sm-3">
                            <a href="/quanLyDocGia/themDocGia" class="nut-them-moi">
                                <button class="nutbam">Thêm độc giả</button>
                            </a>
                        </div>
                        <div class="col-sm-9">
                            <div class="search_box_qlsach row">
                                <form method="get" action="/quanLySach/timKiem">
                                    <div class="input-group mb-3">
                                        <select class="form-select" id="kieuTim" name="kieuTim">
                                            <option value="1">Email</option>
                                            <option value="2">Số điện thoại</option>
                                        </select>
                                        <input class="form-control" type="text" id="searchBox" name="tuKhoa"
                                            placeholder="Nhập từ khóa tìm kiếm...">
                                        <button class="nutbam">Tìm</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <table class="table mb-3">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Tên độc giả</th>
                                <th scope="col">Số điện thoại</th>
                                <th scope="col">Email</th>
                                <th scope="col">Ngày thẻ hết hạn</th>
                                <th scope="col">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for( let i = 0; i < readers.length; i++ ) { %>
                                <tr>
                                    <td><%= 10*(current-1) + i + 1%></td>
                                    <td><%= readers[i].accountId.displayName %></td>
                                    <td><%= readers[i].accountId.phone %></td>
                                    <td><%= readers[i].accountId.email %></td>
                                    <td>
                                        <% if (subtractDays(addDays(readers[i].createdDate,180)) <= 7) { %>
                                            <mark class="dang-xu-ly"><%= addDays(readers[i].createdDate,180).toISOString().split('T')[0] %></mark>
                                        <% }else{ %>
                                            <mark class="da-tra"><%= addDays(readers[i].createdDate,180).toISOString().split('T')[0] %></mark>
                                        <% } %> 
                                    </td>
                                    <td>
                                        <a>
                                            <i class="fa-solid fa-ban" data-bs-toggle="tooltip" data-bs-placement="bottom"
                                            title="Chặn người dùng"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <div class="phan-trang">
                        <% if (pages > 0) { %>
                            <ul class="pagination justify-content-center ">
                                <% if (current == 1) { %>
                                    <li class="disabled"><a class="page-link">
                                        <span aria-hidden="true">&laquo;</span></a>
                                    </li>
                                <% } else { %>
                                    <li><a class="page-link" href="/quanLyDocGia/1">
                                        <span aria-hidden="true">&laquo;</span></a>
                                    </li>
                                <% } %>
                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                <% if (i !== 1) { %>
                                    <li class="page-item active"><a class="page-link">...</a></li>
                                <% } %>
                                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                    <% if (i == current) { %>
                                        <li class="page-item active"><a class="page-link"><%= i %></a></li>
                                    <% } else { %>
                                        <li><a class="page-link" href="/quanLyDocGia/<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                        <li class="page-item active"><a class="page-link">...</a></li>
                                    <% } %>
                                <% } %>
                                <% if (current == pages) { %>
                                    <li class="disabled"><a class="page-link">
                                        <span aria-hidden="true">&raquo;</span></a>
                                    </li>
                                <% } else { %>
                                    <li><a class="page-link" href="/quanLyDocGia/<%= pages %>">
                                        <span aria-hidden="true">&raquo;</span></a>
                                    </li>
                                <% } %>
                            </ul>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/showToolTip.js"></script>
<%- include('../particals/footer') %>
